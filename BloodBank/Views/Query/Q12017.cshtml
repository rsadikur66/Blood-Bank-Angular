
@{
    ViewBag.Title = "Q12017";
}
<script src="~/Apps/JSController/Query/Q12017Controller.js"></script>
<script src="~/Apps/JSService/Query/Q12017Service.js"></script>
@section container
{
    <div id="options" ng-app="BloodBank" ng-controller="Q12017Controller">
        <button id="btnNew" title="New" class="Button New"></button>
        <button id="btnSave" title="Save" class="Button Save"></button>
        <button id="btnNext" title="Next" class="Button Next"></button>
        <button id="btnDelete" title="Delete" class="Button Delete"></button>
        <button id="btnClear" title="Clear" class="Button Clear"></button>
        <button id="btnEnterQuery" title="Clear" class="Button Enter"></button>
        <button id="btnExecuteQuery" title="Save" class="Button Execute"></button>
        <button id="btnPrint" title="Next" class="Button Print"></button>
    </div>
}
<div class="container" ng-app="BloodBank" ng-controller="Q12017Controller" name="obj.myDiv" novalidate ng-form style="width: 97%">
<div class="col-lg-12" style="margin: 1.6% auto; border: 1px solid #A21217; border-radius: 5px; padding: 10px;">
    <table style="width: 100%; margin: 0 auto">
        <tr style="width: 100%;">
            <th style="width: 45%;" class="alnR"><label id="lblRequest" ng-bind="getLabel('lblRequest')" class="ng-cloak" for="txtRequest"></label></th>
            <td style="width: 55%;" class=""><input type="text" id="txtRequest"
                                                    ng-model="obj.T_REQUEST_NO"
                                                    ng-keydown="getData($event,obj.T_REQUEST_NO)" 
                                                    numbers-only
                                                    my-maxlength="8"
                style="width: 20%"/></td>

        </tr>
           
    </table>
</div>
<div class="col-lg-12" id="GridTable" style="margin: 1% auto; border: 1px solid #A21217; border-radius: 5px; padding: 10px;">
<div style="width: 100%;">
<table style="width: 100%; margin:auto;">
<thead style="text-align: center; display: table; width: 100%">
<tr style="width: 100%">
    <th style="width: 8%; text-align:center"><label id="lblReq" ng-bind="getLabel('lblReq')" class="ng-cloak"></label></th>
    <th style="width: 8%; text-align:center"><label id="lblPatNo" ng-bind="getLabel('lblPatNo')" class="ng-cloak"></label></th>
    <th style="width: 20%; text-align:center"><label id="lblLocation" ng-bind="getLabel('lblLocation')" class="ng-cloak"></label></th>
    <th style="width: 10%; text-align:center"><label id="lblReqNoUnit" ng-bind="getLabel('lblReqNoUnit')" class="ng-cloak"></label></th>
    <th colspan="2" style="width: 14%; text-align:center"><label id="lblReqDate" ng-bind="getLabel('lblReqDate')" class="ng-cloak"></label></th>
    <th style="width: 10%; text-align:center"><label id="lblReqStatus" ng-bind="getLabel('lblReqStatus')" class="ng-cloak"></label></th>
    <th style="width: 20%; text-align:center"><label id="lblxMatch" ng-bind="getLabel('lblxMatch')" class="ng-cloak"></label></th>
    <th style="width: 10%; text-align:center"><label id="lblRelease" ng-bind="getLabel('lblRelease')" class="ng-cloak"></label></th>
</tr>
</thead>
<tbody style="max-height: 440px; overflow: auto; overflow-x: hidden; display: block; width: 100%">
<tr style="width: 100%" ng-repeat="obj in Grid">
    <td style="width: 8%;"><input type="text" ng-model="obj.T_REQUEST_NO" style="width: 100%" /></td>
    <td style="width: 8%;"><input type="text" ng-model="obj.T_PAT_NO" style="width: 100%" /></td>
    <td style="width: 20%;"><input type="text" ng-model="obj.LOC_DESC" style="width: 100%" /></td>
    <td style="width: 10%;"><input type="text" ng-model="obj.REQ_UNIT" style="width: 100%" /></td>
    <td style="width: 7%;"><input type="text" ng-model="obj.T_REQUEST_DATE" style="width: 100%" /></td>
    <td style="width: 7%;"><input type="text" ng-model="obj.T_REQUEST_TIME" style="width: 100%" /></td>
    <td style="width: 10%;"><input type="text" ng-model="obj.REQ_STATUS_DESC" style="width: 100%" /></td>
    <td style="width: 20%;"><input type="text" ng-model="obj.XMATCHE_UNIT" style="width: 100%" /></td>
    <td style="width: 10%;"><input type="text" ng-model="obj.UNIT_RELEASE" style="width: 100%" /></td>
</tr>
</tbody>

</table>
</div>

</div>
</div>